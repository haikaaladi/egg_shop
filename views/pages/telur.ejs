<div class="container">
    <h4 class="text-warning">Dua Telur Farm</h4>
    <hr>
    <ul class="list-group my-2 ">
        <% data.forEach(telur=> { %>
            <li class="list-group-item" style="background-color: #fff8e2">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-warning">Jenis Telur</small> <br />
                        <%= telur.jenis_telur %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-warning">Stok</small> <br />
                        <%= telur.stok %> Kg
                    </div>

                    <div class="col-lg-3">
                        <small class="text-warning">Harga</small> <br />
                        Rp <%= telur.harga %>

                    </div>

                    <div class="col-lg-3">
                        <small class="text-warning">Action</small> <br />

                        <!-- button edit -->
                        <a href="/telur/edit/<%= telur.id %>">
                            <button class="btn btn-sm btn-dark">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/telur/delete/<%= telur.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/telur/add">
        <button class="btn btn-md" style="background-color: #FAC213;">
            Tambah Jenis Telur
        </button>
    </a>

</div>
