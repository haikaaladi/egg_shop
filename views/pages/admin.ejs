<div class="container">
    <h4 class="text-warning">Admin</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(admin=> { %>
            <li class="list-group-item" style="background-color: #fff8e2">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-warning">Nama Admin</small> <br />
                        <%= admin.nama_admin %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-warning">Username</small> <br />
                        <%= admin.username %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-warning">Password</small> <br />
                        <%= admin.password %>

                    </div>

                    <div class="col-lg-3">
                        <small class="text-warning">Action</small> <br />

                        <!-- button edit -->
                        <a href="/member/edit/<%= admin.id %>">
                            <button class="btn btn-sm btn-dark">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/member/delete/<%= admin.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/admin/add">
        <button class="btn btn-md btn-warning">
            Tambah Admin Baru
        </button>
    </a>

</div>
