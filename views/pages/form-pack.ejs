<div class="container">
    <div class="card">
        <div class="card-header bg-danger">
            <h4 class="text-white">Form Tambah pack</h4>
        </div>
        <div class="card-body">
            <form action="<%= targetRoute %>" method="post">
                nama Pack
                <input type="text" name="nama_pack" id="nama_pack" class="form-control" value="<%= nama_pack %>" required />

                Harga
                <input type="number" name="harga" id="harga" class="form-control" value="<%= harga %>" required />



                <button type="submit" class="btn btn-danger mt-2">
                    Simpan
                </button>
            </form>
        </div>
    </div>
</div>
