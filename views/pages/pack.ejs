<div class="container">
    <h4 class="text-warning">Dua pack Collection</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(pack=> { %>
            <li class="list-group-item" style="background-color: #fff8e2">
                <div class="row">
                    <div class="col-lg-4">
                        <small class="text-warning">nama pack</small> <br />
                        <%= pack.nama_pack %>
                    </div>

                    <div class="col-lg-4">
                        <small class="text-warning">Harga</small> <br />
                        Rp <%= pack.harga %>

                    </div>

                    <div class="col-lg-4">
                        <small class="text-warning">Action</small> <br />

                        <!-- button edit -->
                        <a href="/pack/edit/<%= pack.id %>">
                            <button class="btn btn-sm btn-dark">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/pack/delete/<%= pack.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/pack/add">
        <button class="btn btn-md btn-warning">
            Tambah Pack
        </button>
    </a>

</div>
